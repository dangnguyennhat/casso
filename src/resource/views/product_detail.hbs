<div class="container mt-5">
    <h1 id="detailName">Item Details</h1>
    <img id="detailImage" src="" class="img-fluid mb-3" alt="Image">
    <p id="detailSize"></p>
    <p id="detailOccupation"></p>
</div>

<script type="module">
import { data } from '../../product.js';

document.addEventListener('DOMContentLoaded', function() {
    const selectedItemId = sessionStorage.getItem('selectedItemId');

    // Find the item in the data array
    const item = data.find(i => i.id === parseInt(selectedItemId));

    if (item) {
        // Display item details
        document.getElementById('detailName').textContent = item.name;
        document.getElementById('detailImage').src = item.img;
        document.getElementById('detailSize').textContent = `Size: ${item.size}`;
        document.getElementById('detailOccupation').textContent = `Occupation: ${item.occupation}`;
    } else {
        // Handle case where item is not found
        document.getElementById('detailName').textContent = 'Item not found';
    }
});

</script>